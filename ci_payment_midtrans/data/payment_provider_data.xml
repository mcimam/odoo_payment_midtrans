<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

      <record id="payment_provider_midtrans" model="payment.provider">
        <field name="name">Midtrans</field>
        <field name="code">midtrans</field>
        <field name="is_published">True</field>
        <field name="image_128" type="base64" file="payment_midtrans/static/src/img/midtrans_icon.png"/>
        <field name="redirect_form_view_id" ref="midtrans_acquirer_button"/>
        <field name="pre_msg"><![CDATA[
<p>You will be redirected to the Midtrans website after clicking on the payment button.</p>]]></field>
        <field name="allow_tokenization">False</field>
        <field name="allow_express_checkout">True</field>
        <field name="payment_method_ids"
               eval="[Command.set([
                         ref('ci_payment_midtrans.payment_method_midtrans'),
                     ])]"
        />
    </record>


  </data>
</odoo>
